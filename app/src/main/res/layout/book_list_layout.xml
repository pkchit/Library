<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:elevation="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/book_image_display"
            android:layout_width="170dp"
            android:layout_height="250dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/book_name_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Name"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/book_category_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="Genre"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/book_author_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author:"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/book_description_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:layout_marginTop="10dp"
                android:text="Book Description"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/book_contributor_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:layout_marginTop="10dp"
                android:text="Contributor"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>